/* pages/user/dingdan.wxss */

.swiper-tab {
  width: 100%;
  height: 88rpx;
  color: #404245;
  font-weight: 400;
  text-align: center;
  box-sizing: border-box;
  line-height: 88rpx;
  background-color: #fff;
  border-bottom: 2rpx #e9e9e9 solid;
  border-width: 1rpx;
}

.swiper-tab-list {
  position: relative;
  display: block;
  float: left;
  width: 20%;
  height: 88rpx;
  line-height: 88rpx;
  overflow: hidden;
  box-sizing: border-box;
}

.swiper-tab-list text {
  color: #030303;
  font-size: 30.8rpx;
  padding: 0 10.1rpx 15rpx 10.1rpx;
}

.order-list {
  display: block;
  width: 100%;
  padding-top: 88rpx;
  overflow: hidden;
}

.order-list .list-item {
  margin-top: 20rpx;
}

.header-row {
  padding: 0 24rpx;
  background: #fff;
}
.border-b{
  border-bottom: 2rpx solid #f0f0f0;
  width: 100%;
  height:88rpx;
  line-height: 88rpx;
}
.b-bottom{
  border-top:2rpx solid #f0f0f0;
}
.header-lf {
  font-size: 28rpx;
  color: #767676;
}

.header-rg {
  font-size: 24rpx;
  color: #555;
  font-weight: 600;
  text-align: right;
}

.order-main{
  padding-left: 24rpx;
  padding-right: 24rpx;
  box-sizing: border-box;
  width: 100%;
}


.empty {
  position: relative;
  display: block;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.empty.address-empty {
  height: 600rpx;
  background: #fff;
}

.empty .empty-item {
  position: absolute;
  left: 50%;
  /*top: 50%;*/
  display: block;
  width: 100%;
  transform: translateX(-50%);
}

.empty .empty-item .item-logo {
  display: block;
  margin: 0 auto;
  width: 288rpx;
  height: 128rpx;
}
.filter-item{
  color: #555 !important;
}

.filter-item.active text {
  line-height: 88rpx !important;
  border-bottom: #ffe150 4rpx solid !important;
  color: #303030 !important;
  /*font-weight: 600;*/
}
.filter-item text{
  color: #555 !important;
  font-size:28rpx;
}
.footer-button{
  background-color: #ffe150;
  color:#555;
}
.credits-icon{
  width: 36rpx;
  height:36rpx;
}
.info-price-credits{
  position: absolute;
  left: 0rpx;
  bottom: 0;
  box-sizing: border-box;
  color: #030303;
  font-size: 26rpx;
  line-height: 28rpx;
  display: flex;
  align-items: center;
}
.sum-credits{
  color: #e71f19;
  font-size: 32rpx;
  font-weight: 700;
  line-height: 32rpx;
  display: inline-block;
}
.sum-credits image{
vertical-align: middle;
}
.sum-credits .p{
  vertical-align: middle;
}
.sum-credits .score{
  font-size: 24rpx;
  margin-left: 8rpx;
  color:#EB3C39;
}
.score{
  font-size: 24rpx;
  margin-left: 8rpx;
  color:#EB3C39;
  vertical-align: middle;
}
