/*order-back-list*/
page{
  height:100%;
  width: 100%;
}
.order-back-list {
  position: relative;
  display: block;
  width: 100%;
  text-align: center;
}

.order-back-list .list-item {
  position: relative;
  display: block;
  width: 100%;
  text-align: center;
  background-color: #fff;
  margin-bottom: 22rpx;
  margin-top: 16rpx;
}

.order-back-list .list-item.detail {
  margin: 0;
}

.order-back-list .list-item .item-header {
  position: relative;
  display: inline-block;
  width: 100%;
  padding: 22rpx 24rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-bottom: #f0f0f0 2rpx solid;
}

.order-back-list .list-item .item-header .header-back {
  float: left;
  width: 100%;
  position: relative;
  display: block;
  text-align: left;
  font-size: 0;
  padding-top: 10rpx;
  box-sizing: border-box;
}

.order-back-list .list-item .item-header .header-back>.back-title {
  font-size: 28rpx;
  color:#767676;
  font-weight: normal;
  line-height: 28rpx;
}

.order-back-list .list-item .item-header .header-back>.back-text {
  font-size: 28rpx;
  font-weight: 500;
  line-height: 28rpx;
  color:#767676;
}

.order-back-list .list-item .item-header .header-back>.back-yunfei {
  font-size: 28rpx;
  font-weight: normal;
  line-height: 28rpx;
  color: #bbb;
  padding-left: 10rpx;
}

.order-back-list .list-item .item-header .header-back>.back-status {
  float: right;
  font-size: 24rpx;
  font-weight: normal;
  line-height: 28rpx;
  color: #555;

}

.order-back-list .list-item .item-header .header-back>.back-status.danger {
  color: #ff4222;
}

.order-back-list .list-item .item-header .header-back>.back-status.success {
  color: #555555;
}

/*order-back-goods*/

.order-back-goods {
  position: relative;
  display: block;
  width: 100%;
  box-sizing: border-box;
  background-color: #fff;

}

.order-back-goods .goods-item {
  position: relative;
  display: block;
  width: 100%;
  border-bottom: 2rpx solid #f0f0f0;
  height: 200rpx;
  box-sizing: border-box;
  background-color: #fff;
  padding: 0 26rpx;
}
.order-back-goods .goods-bar{
  display: flex;
  width: 100%;
  height: 112rpx;
  align-items:center;/*垂直居中*/
  justify-content: flex-end;
  padding: 0 26rpx;
  box-sizing: border-box;

}
.order-back-goods .goods-bar .qx{
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  color:#888888;
  /*border: 1rpx solid #ddd;*/
  border-radius: 30rpx;
  margin-right: 24rpx;
  background-color: #f2f2f2;
}
.order-back-goods .goods-bar .ck{
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  /*border: 1rpx solid #ffe150;*/
  color: #555555;
  background: #ffe150;
  border-radius: 30rpx;
}
.order-back-goods .goods-item.no-border {
  border: 0;
}

.order-back-goods .goods-item .item-photo {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left:26rpx;
  display: block;
  height: 180rpx;
  width: 180rpx;
  overflow: hidden;
}

.order-back-goods .goods-item .item-photo image {
  width: 100%;
  max-width: 100%;
  height: 100%;
  background-color: #fff;
}

.order-back-goods .goods-item .item-info {
  position: relative;
  display: block;
  height: 100%;
  box-sizing: border-box;
  margin-left: 200rpx;
  overflow: hidden;
}

.order-back-goods .goods-item .item-info .info-name {
  position: relative;
  width: 85%;
  margin-top: 15rpx;
  box-sizing: border-box;
  color: #545454;
  font-size: 28rpx;
  font-weight: 600;
  /*font-weight: normal;*/
  text-align: left;
  /*line-height: 1.8;*/
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.order-back-goods .goods-item .item-info .info-attr {
  position: relative;
  width: 90%;
  box-sizing: border-box;
  color: #aaaaaa;
  font-size: 24rpx;
  font-weight: normal;
  text-align: left;
  line-height: 1.8;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.order-back-goods .goods-item .item-info .info-amount {
  box-sizing: border-box;
  color: #545454;
  font-size: 24rpx;
  /*font-weight: normal;*/
  text-align: left;
  line-height: 26rpx;
  position: absolute;
  top: 23rpx;
  right: 15rpx;
  font-weight: 500;
}
.order-back-goods .goods-item .item-info .info-price{
  position: absolute;
  bottom: 10rpx;
  left: 0;
  color:#545454;
  font-size: 24rpx;
  font-weight: 500;
}
.order-back-goods .goods-item .item-info .info-return {
  position: absolute;
  width: 160rpx;
  height: 60rpx;
  right: 26rpx;
  bottom: 26rpx;
  box-sizing: border-box;
  color: #767676;
  font-size: 28rpx;
  font-weight: normal;
  text-align: center;
  border: 1rpx solid #e5e5e5;
  line-height: 60rpx;
  border-radius: 2px;
}

.order-back-goods .goods-item .item-info .info-button {
  position: absolute;
  right: 26rpx;
  bottom: 32rpx;
  width: 180rpx;
  text-align: center;
  height: 60rpx;
  border: 1rpx solid #767676;
  display: block;
  color: #767676;
  font-size: 30rpx;
  font-weight: normal;
  box-sizing: border-box;
  line-height: 60rpx;
  border-radius: 3px;
}
.order-back-goods .goods-item .item-info .info-wrap{
  position: absolute;
  bottom: 10rpx;
  right: 0;
  font-size: 24rpx;
  color:#aaa;
}

.empty {
  position: relative;
  display: block;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.empty.address-empty {
  height: 600rpx;
  background: #fff;
}

.empty .empty-item {
  position: absolute;
  left: 50%;
  /*top: 50%;*/
  display: block;
  width: 100%;
  transform: translateX(-50%);
}

.empty .empty-item .item-logo {
  display: block;
  margin: 0 auto;
  width: 280rpx;
  height: 200rpx;
}



