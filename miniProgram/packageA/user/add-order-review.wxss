.review-goods .goods-item .item-info {
  position: relative;
  display: block;
  min-height: 16rpx;
  padding: 40rpx 0 22rpx 0;
  margin-left: 240rpx;
}

.review-goods .goods-item .item-info .info-name {
  color: #000;
  font-size: 30rpx;
  font-weight: normal;
  line-height: 30rpx;
  overflow: hidden;
}

.review-goods .goods-item .item-info .info-attr {
  margin-top: 14rpx;
  position: relative;
  display: block;
  box-sizing: border-box;
  color: #767676;
  font-size: 26rpx;
  line-height: 28rpx;
  padding-right: 120rpx;
  font-weight: normal;
  text-align: left;
}

.review-goods .goods-item .item-info .info-price {
  position: absolute;
  left: 0;
  bottom: 44rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  text-align: left;
  color: #e71f19;
}

.review-goods .goods-item .item-info .info-nums {
  position: absolute;
  right: 44rpx;
  bottom: 44rpx;
  font-size: 30rpx;
  line-height: 30rpx;
  color: #767676;
}

.review-goods .goods-item .info-grade-box {
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: -moz-box;
  display: -moz-flex;
  display: -ms-flexbox;
  display: flex;
  border-top: 1rpx #f2f2f2 solid;
  padding: 0 36rpx;
}

.review-goods .goods-item .info-grade-box .info-grade {
  width: 33.33%;
  padding: 40rpx 0;
  font-weight: normal;
  text-align: center;
}

.review-goods .goods-item .info-grade-box .info-grade .grade-icon {
  width: 40rpx;
  height: 40rpx;
  box-sizing: border-box;
}

.review-goods .goods-item .info-grade-box .info-grade .grade-name {
  margin-left: 22rpx;
  color: #767676;
  font-size: 32rpx;
  font-weight: normal;
  line-height: 32rpx;
  vertical-align: bottom;
}

.review-goods .goods-item .item-textarea {
  position: relative;
  display: block;
  width: 100%;
  padding: 26rpx 0;
  padding-right: 26rpx;
  box-sizing: border-box;
}

.review-goods .goods-item .item-textarea .textarea-toast {
  position: absolute;
  top: 0;
  -webkit-transform: translateY(-100%);
  transform: translateY(-100%);
  max-width: 520rpx;
  background: rgba(0, 0, 0, 0.8);
  border-radius: 3px;
}

.review-goods .goods-item .item-textarea .textarea-toast:after {
  content: '';
  position: absolute;
  left: 30rpx;
  border-left: 14rpx solid transparent;
  border-right: 14rpx solid transparent;
  border-top: 20rpx solid rgba(0, 0, 0, 0.65);
}

.review-goods .goods-item .item-textarea .textarea-toast .toast-text {
  color: #fff;
  padding: 14rpx 48rpx 14rpx 22rpx;
  font-size: 32rpx;
  line-height: 44rpx;
}

.review-goods .goods-item .item-textarea .textarea-toast .toast-close {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  width: 28rpx;
  height: 28rpx;
}

.review-goods .goods-item .item-textarea textarea {
  display: block;
  width: 100%;
  min-height: 260rpx;
  box-sizing: border-box;
  border: 0;
  text-align: left;
  color: #767676;
  font-size: 30rpx;
  font-weight: normal;
  line-height: 44rpx;
}

.review-goods .goods-item .item-textarea .inputnum {
  font-size: 26rpx;
  color: #999;
  padding: 28rpx 0;
  padding-right: 32rpx;
  background: #f5f5f5;
  position: relative;
  width: 100%;
  text-align: right;
  box-sizing: border-box;
  border-bottom-left-radius: 3px;
  border-bottom-right-radius: 3px;
}

.review-grades {
  background-color: #fff;
  padding: 23.76rpx 23.76rpx 0;
  box-sizing: border-box;
  padding-bottom: 0;
  width: 100%;
}

.review-grades .grade-line {
  padding-bottom: 38rpx;
  box-sizing: border-box;
}

.review-grades .grade-line .line-title {
  font-size: 30rpx;
  color: #000;
  vertical-align: middle;
}

.review-grades .grade-line .line-stars {
  padding-right: 22rpx;
  margin-left: 35rpx;
}

.review-grades .grade-line .line-stars .stars {
  text-align: center;
  width: 69rpx;
  display: flex;
  align-items: center;
}

.review-grades .grade-line .line-stars .stars .grade-icon {
  width: 39.6rpx;
  height: 39.6rpx;
}

.review-grades .grade-line .line-subtxt {
  font-size: 30rpx;
  color: #767676;
}

.review-anon {
  background-color: #f7f7f7;
  position: relative;
  display: block;
  width: 100%;
  min-height: 88rpx;
  overflow: hidden;
  box-sizing: border-box;
}

.review-anon .item-checkbox {
  position: absolute;
  top: 50%;
  left: 20rpx;
  margin-top: -20rpx;
  width: 40rpx;
  height: 40rpx;
  background-image: url("http://img.mall.surex.cn/cilicili_icons/icon_check_off.png");
  background-repeat: no-repeat;
  background-size: 100% 100%;
}

.review-anon.active .item-checkbox {
  background-image: url("http://img.mall.surex.cn/cilicili_icons/icon_check_on.png");
  background-repeat: no-repeat;
  background-size: 100% 100%;
}

.review-anon .item-title {
  position: absolute;
  left: 80rpx;
  width: 25%;
  height: 88rpx;
  box-sizing: border-box;
  color: #888;
  font-size: 28rpx;
  font-weight: normal;
  text-align: left;
  line-height: 88rpx;
}

.review-submit-box {
  position: relative;
  padding: 32rpx 26rpx;
  width: 100%;
  box-sizing: border-box;
}

.review-submit {
  height: 88rpx;
  box-sizing: border-box;
  border: none;
  border-radius: 3px;
  background-color: #f9ae08;
  color: #fff;
  font-size: 38rpx;
  font-weight: normal;
  line-height: 88rpx;
  text-align: center;
}
.withTxt image{
  width: 100%;
  height: 100%;
}
.old-review{
  margin-bottom: 10rpx;
  position: relative;
  border-bottom: 8rpx solid #F1F1F1;
  padding-top: 26rpx;
}
.old-review .box-img{
  display: inline-block;
  position:relative;
  width:160rpx;
  height:160rpx;
  margin-right:22rpx;
  margin-bottom:22rpx;
  margin-top: 26rpx;
}
.old-review .box-img>image{
  float:left;
  width:100%;
  height:100%;
}
.padding_left{
  padding-left: 26rpx !important;
}
.margin_left{
  margin-left: 26rpx !important;
}
.addReviewTitle{
  font-size: 32rpx;
  margin-bottom: 20rpx;
}
