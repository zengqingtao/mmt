.review-goods {
  position: relative;
  display: block;
  width: 100%;
  box-sizing: border-box;
}

.review-goods .goods-item {
  position: relative;
  display: block;
  width: 100%;
  box-sizing: border-box;
  background-color: #fff;
  overflow: hidden;
  padding: 26rpx 0 4rpx 0;
  margin-bottom: 22rpx;
}

.review-goods .goods-item .item-inner {
  border-bottom: 1rpx solid #e9e9e9;
  padding-bottom: 22rpx;
  display: flex;
  align-items: center;
}

.review-goods .goods-item .item-photo {
  width: 88rpx;
  height: 88rpx;
  overflow: hidden;
}

.item-photo image {
  width: 90rpx;
  height: 90rpx;
}

.review-goods .goods-item .item-photo img {
  width: 100%;
  max-width: 100%;
  height: 100%;
  background-color: #fff;
}
