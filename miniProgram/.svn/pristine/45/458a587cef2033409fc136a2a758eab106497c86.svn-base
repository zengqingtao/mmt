/* packageB/invitation-code/invitation-code.wxss */
page{
  background-color: #FFE772
}

.invitation-code{
  width: 100%;
  height: 100vh;
  background-size: 100% 100%;
}
.header-logo{
  position: absolute;
  top: 64rpx;
  left: 50%;
  transform: translateX(-50%);
  -webkit-transform: translateX(-50%);
  width: 338rpx;
  height: 124rpx;
}
.main{
  padding: 236rpx 24rpx 238rpx 24rpx
}
.code-box{
  width: 704rpx;
  padding: 0 0 37rpx 0;
  background-color: #fff;
  text-align: center;
  border-radius: 8px;
}
.code-box .text{
  font-size: 32rpx;
  color: #aaa;
  padding-top: 32rpx;
}
.code-box .code{
  background-color: #F2F2F2;
  width: 608rpx;
  height: 172rpx;
  border-radius: 6px;
  text-align: center;
  line-height: 172rpx;
  font-size: 76rpx;
  color: #303030;
  margin-left: 48rpx;
  margin-top: 32rpx;
  font-weight:600;
}
.code-box .code.smoll{
  font-size: 56rpx;
}
.code-box .rend{
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  margin-top: 48rpx;
}
.btn-box{
  margin-top: 48rpx;
  padding: 0 170rpx;
}
.btn-box button{
  background-color: #303030;
  color: #fff;
}
.footer{
  position: absolute;
  bottom: 26rpx;
  left: 50%;
  transform: translateX(-50%);
  -webkit-transform: translateX(-50%);
  font-size: 24rpx;
  color: #555
}

.goHomeFixed {
  top: 24rpx;
  width: 136rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.goHomeFixed text{
  font-size: 28rpx;
  line-height: 28rpx;
  color: #fff;
}

.goHomeFixed .icon-leftReturn{
  font-size: 28rpx;
  line-height: 28rpx;
}
.curtain {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.3);
  z-index: 99998;
}
.popup-model {
  position: fixed;
  top: 40%;
  left: 50%;
  transform: translate(-50%, -40%);
  -webkit-transform: translate(-50%, -40%);
  width: 500rpx;
  background-color: #fff;
  z-index: 99999;
  text-align: center;
  padding: 30rpx 0 50rpx 0;
  border-radius: 8rpx;
}
.popup-model .title{
  font-size: 40rpx;
  color: #303030;
  font-weight:600;
}
.popup-model .popup-footer-btn {
  padding-top: 40rpx;
  align-items: center;
  justify-content: center;
}
.popup-model .popup-footer-btn .btn {
  width: 284rpx;
  height: 84rpx;
  text-align: center;
  line-height: 84rpx;
  border-radius: 50px;
  background-color: #FFE772;
}