/* 优惠券样式 */

.box_list {
  position: relative;
  width: 100%;
  /* padding: 30rpx 48rpx 30rpx 0; */
  height: 182rpx;
  margin-top: 20rpx;
  box-sizing: border-box;
  overflow: hidden;
  background-repeat: no-repeat;
  background-size: 100% 100%;
}

.box_list .coupon_val {
  font-weight: 500;
  width: 170rpx;
  height:182rpx;
  text-align: center;
  color: #303030;
  line-height: 182rpx;
}

.box_list .color-coupon {
  color: #eb3c39 !important;
}

.box_list .coupon_val .text {
  font-size: 96rpx;
}

.box_list .coupon_val .icon {
  font-size: 32rpx;
}

.box_list .coupon_info {
  position: absolute;
  left: 200rpx;
  top: 40rpx;
}

.box_list .coupon_info .list_title {
  font-size: 28rpx;
  line-height: 28rpx;
  font-weight: bold;
  padding-bottom: 18rpx;
  width: 300rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.box_list .coupon_info .dom-attr {
  font-size: 24rpx;
  line-height: 26rpx;
  height: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 300rpx;
}

.box_list .list_button {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  -webkit-transform: translateY(-50%);
  font-size: 36rpx;
  font-weight: bold;
}

.box_list .coupon_info .list_time {
  margin-top: 4rpx;
  font-size: 20rpx;
  line-height: 24rpx;
}

.box_list .get_coupon_btn {
  position: absolute;
  right: 24rpx;
  top: 60rpx;
}

.box_list  .list_button_img {
  position: absolute;
  right: 18rpx;
  top: 18rpx;
}

.box_list .list_button_img image {
  width: 180rpx;
  height: 180rpx;
}

.box_list .get_coupon_btn .getCoupon {
  width: 144rpx;
  height: 64rpx;
  line-height: 64rpx;
  color: #555;
  font-weight: 600;
  background-color: #ffe150;
  padding: 0;
  border-radius: 32rpx;
  font-size: 28rpx;
}

/* 优惠券勾选 */

.box_list .get_coupon_btn .setCoupon {
  background: transparent;
  padding: 0;
  /* width: 128rpx; */
  height: 40rpx;
  line-height: 40rpx;
}

.box_list .get_coupon_btn .setCoupon .icon-img-coupon {
  width: 40rpx;
  height: 40rpx;
}

.box_list .get_coupon_btn .setCoupon .iconfont {
  font-size: 40rpx;
  color: #aaa;
}
