/* 微信小程序框架配置 */

page {
  height: 100%;
  background: #f2f2f2;
  font-family: '微软雅黑';
}

.container {
  width: 100%;
  overflow-x: hidden;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  font-family: '微软雅黑';
}

.container.with-loader {
  padding-bottom: 48rpx;
}

.container.detail-loader {
  padding-bottom: 120rpx;
}

/* 栅格化布局 */

.row {
  width: 100%;
  display: flex;
  display: -webkit-flex;
  box-sizing: border-box;
}

.row-wrap {
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.col {
  flex: 1;
}

/* 强制无边框 */

.no-border {
  border: 0 !important;
}

