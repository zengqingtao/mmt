.footbtn {
  position: relative;
  width: 100%;
  margin-top: 180rpx;
  padding: 0 26rpx;
  box-sizing: border-box;
  background: #fff;
}

.footbtn.footbtn-return {
  margin-top: 40rpx;
  background: 0 0;
}

.footbtn button {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #ff7f95;
  border: 0;
  border-radius: 4px;
  font-size: 38rpx;
  color: #fff;
}

