/*地址管理*/

page {
  background-color: #efeff4;
  font-size: 10pt;
  -webkit-user-select: none;
  user-select: none;
  width: 100%;
  overflow-x: hidden;
}

.address {
  display: flex;
  flex-wrap: wrap;
  background-color: #fff;
  margin-top: 1px;
  padding: 30rpx;
  margin: 30rpx 0;
}

.address-icon {
  width: 100rpx;
}

.address-detail {
  width: 590rpx;
}

.address-name-phone {
  margin-bottom: 20rpx;
  font-size: 11pt;
  font-weight: 900;
}

.address-name {
  margin-right: 20rpx;
}

.address-info {
  margin-bottom: 30rpx;
  display: inline-block;
}

.address-edit {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  border-top: 1px #efeff4 solid;
  padding-top: 30rpx;
}

.add-address {
  position: relative;
  z-index: 100;
  width: 100%;
  box-sizing: border-box;
  padding: 0 28.6rpx;
  margin-top: 41.8rpx;
}

.delete view {
  background-color: #333 !important;
}

.add-address-icon {
  height: 20px;
  width: 20px;
}

.top-info {
  padding: 29.7rpx 23.7rpx;
  background: #fff;
  position: relative;
  border-bottom: 1.8rpx #e9e9e9 solid;
  border-width: 0.9rpx;
}

.top-info .info-text {
  font-size: 25.7rpx;
  color: #030303;
}

.top-info .info-button {
  position: absolute;
  top: 0;
  right: 27rpx;
  background: 0 0;
  border: 0;
  color: #FF7F95;
  padding: 31.6rpx 0;
}

.top-info .info-button .button-text {
  font-size: 25.7rpx;
}

.top-info .info-button .button-text.ng-hide {
  display: none !important;
}

.list-item {
  border-bottom: #f2f2f2 1.8rpx solid;
  background-color: #fff;
  position: relative;
}

.list-item.checkOrder{
  border-left: #FF7F95 5px solid;
}
.user-item-checkbox {
  position: absolute;
  left: -69.3rpx;
  top: 40%;
}

.list-item .item-info, .list-item.readonly .item-info {
  position: relative;
  display: block;
  padding: 35.6rpx 28rpx 35.6rpx 28rpx;
  box-sizing: border-box;
}

.list-item .item-info .info-contact {
  position: relative;
  display: block;
  width: 100%;
  box-sizing: border-box;
  color: #030303;
  font-size: 29.7rpx;
  font-weight: 400;
  text-align: left;
}

.list-item .item-info .info-contact text {
  font-size: 29.7rpx;
  color: #030303;
  margin-right: 44.4rpx;
}

.list-item .item-info .info-contact .contact-default {
  color: #fff;
  background: #2db7f3;
  text-align: center;
  border-radius: 27rpx;
  box-sizing: border-box;
  font-size: 21.7rpx;
  padding: 5.9rpx 21.7rpx;
  font-weight: 400;
  margin-left: 23.7rpx;
}

.list-item .item-info .info-detail {
  position: relative;
  display: block;
  width: 100%;
  box-sizing: border-box;
  color: #8e8e8e;
  font-size: 27.7rpx;
  padding-top: 16.7rpx;
  padding-right: 40rpx;
  line-height: 35.6rpx;
  font-weight: 400;
  text-align: left;
}

.paddingleft {
  padding-left: 91.08rpx;
}

.manu-right-icon {
  position: absolute;
  right: 27rpx;
  top: 35%;
}

.defaults {
  color: #fff;
  background: #FF7F95;
  text-align: center;
  border-radius: 27rpx;
  box-sizing: border-box;
  font-size: 21.78rpx;
  padding: 8rpx 22rpx;
}

.address-empty {
  position: relative;
  display: block;
  width: 100%;
  height: 800rpx;
  overflow: hidden;
  background: #fff;
}

.empty-item {
  position: absolute;
  left: 0;
  top: 0;
  display: block;
  width: 100%;
  height: 259rpx;
  margin-top: 172rpx;
}

.empty-item image {
  display: block;
  margin: 0 auto;
  width: 345rpx;
}

.empty-item text {
  display: block;
  height: 120rpx;
  line-height: 120rpx;
  color: #FF7F95;
  font-size: 32rpx;
  overflow: hidden;
  text-align: center;
}

.addInfo {
  margin-left: 10rpx;
}
.item-arrow{
  position:absolute;
  right:33.6rpx;
  top:50%;
  transform:translateY(-50%);
  -webkit-transform:translateY(-50%);
  display:block;
  width:16rpx;
  height:30rpx;
  
}