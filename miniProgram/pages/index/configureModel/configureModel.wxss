/* components/goodList3/goodList3.wxss */
@import "/wxParse/suui/suui.wxss";

.configureModel{
  width: 100%;
}
.homeBlock {
  padding-bottom: 25rpx;
  background-color: #fefefe;
}
.item-block {
  width: 750rpx;
}
.block-image-cover {
  display: block;
  width: 750rpx;
  height: 360rpx;
}
.block-image {
  display: block;
  width: 700rpx;
  height: 320rpx;
  margin: 25rpx 25rpx 0rpx 25rpx;
}
.block-product {
  margin-top: 25rpx;
  width: 750rpx;
  padding: 0 24rpx;
  box-sizing:border-box;
}
.header-bar {
  position: relative;
  height: 104rpx;
  width: 750rpx;
}
.bar-image {
  width: 700rpx;
  height: 72rpx;
  margin: 25rpx 25rpx 0 25rpx;
