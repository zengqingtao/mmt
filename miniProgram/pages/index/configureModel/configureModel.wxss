  width: 347rpx;
  height: 206rpx;
}
.block-image-bottom {
  margin-bottom: 6rpx;
}
.block-image-right {
  margin-right: 4rpx;
}


/* 优惠券 */
.coupon_wrap {
  width: 700rpx;
  height: 144rpx;
  margin: 16rpx auto;
  /* margin-bottom: 16rpx; */
  background: #eb3c39;
  border-radius: 8rpx;
  padding: 12rpx 10rpx;
  box-sizing: border-box;
  position: relative;
}
.coupon_wrap .cover_img{
  position: absolute;
  top: 0;
  left: 0;
  z-index: 10;
  width: 44rpx;
  height: 144rpx;
}
.scroll_wrap {
  width: 500rpx;
  height: 120rpx;
  white-space: nowrap;
}

.scroll_wrap .coupon {
  display: inline-block;
  width: 216rpx;
  height: 120rpx;
  background-size: cover;
  background-repeat: no-repeat;
}

.scroll_wrap .coupon .price {
  color: #bb803b;
  font-size: 52rpx;
  font-weight: 600;
  text-align: center;
}

.scroll_wrap .coupon .price .small {
  font-size: 20rpx;
  color: #bb803b;
}

.scroll_wrap .coupon .tab {
  font-size: 20rpx;
  color: #fff;
  text-align: center;
  margin: 0 auto;
  margin-top: 4rpx;
}

.scroll_wrap .coupon .tab .text {
  min-width: 130rpx;
  height: 30rpx;
  border-radius: 20rpx;
  background: #bb803b;
  padding: 0 10rpx;
}

.coupon_wrap .total_box {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 20rpx;
}

.coupon_wrap .total_box .total_price {
  font-size: 55rpx;
  color: #fff;
  text-align: center;
}

.coupon_wrap .total_box .small {
  font-size: 20rpx;
}

.coupon_wrap .total_box .get_btn {
  width: 160rpx;
  height: 42rpx;
  background-size: cover;
  background-repeat: no-repeat;
}