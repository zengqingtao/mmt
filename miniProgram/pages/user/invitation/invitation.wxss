}

.invitation .content-gifts .gifts-coupon {
  position: relative;
  width: 162rpx;
  height: 180rpx;
}

.invitation .content-gifts .coupon-title {
  text-align: center;
  font-size: 24rpx;
  line-height: 28rpx;
  color: #9D4F00;
}

.invitation .content-gifts .coupon-content {
  text-align: center;
  font-size: 20rpx;
  color: #9D4F00;
}

.invitation .content-gifts .coupon-price {
  position: absolute;
  bottom: 30rpx;
  left: 0;
  width: 100%;
  height: 80rpx;
  text-align: center;
  font-size: 64rpx;
  line-height: 80rpx;
  color: #DC0805;
  vertical-align: text-bottom;
}

.invitation .content-gifts .coupon-price .price-symbol {
  text-align: center;
  font-size: 24rpx;
  color: #DC0805;
}

.invitation .content-gifts .coupon-tag {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 30rpx;
  text-align: center;
  font-size: 18rpx;
  line-height: 30rpx;
  color: #AAAAAA;
}

.invitation .content-button {
  margin: 40rpx 109rpx;
  width: 532rpx;
  height: 132rpx;
  color: #FFF;
  font-size: 40rpx;
  background-color: transparent;
  background-size: 100% 100%;
  background-repeat: no-repeat;
  font-weight: 600;
  line-height: 114rpx;
}

.invitation .content-card {
  background-size: 100% 100%;
  background-repeat: no-repeat;
  margin: 0 25rpx;
  width: 700rpx;
  height: 342rpx;
  padding: 36rpx 12rpx 0 12rpx;
}

.invitation .content-card .card-title {
  text-align: center;
  font-size: 32rpx;
  color: #3E3E3E;
  font-weight: 600;
}

.invitation .content-card .card-sum {
  text-align: center;
  font-size: 32rpx;
  color: #AAAAAA;
  font-weight: 600;
  margin: 20rpx 0;
}

.invitation .content-card .card-sum .sum-price {
  color: #EB3C39;
  font-size: 48rpx;
}

.invitation .content-card .card-item {
  align-items: center;
  padding-top: 16rpx;
}

.invitation .content-card .card-line {
  width: 2rpx;
  height: 64rpx;
  background-color: #EB3C39;
}

.invitation .content-card .card-col {
  flex: 1;
}

.invitation .content-card .card-col .col-up {
  text-align: center;
  line-height: 64rpx;
  color: #EB3C39;
  font-size: 48rpx;
}

.invitation .content-card .card-col .col-up .small {
  color: #555;
  font-size: 20rpx;
  margin-left: 10rpx;
}

.invitation .content-card .card-col .col-text {
  text-align: center;
  font-size: 24rpx;
  color: #555;
}

.invitation .card-acode {
  margin-top: 60rpx;
  text-align: center;
}

.invitation .card-acode image {
  width: 400rpx;
  height: 400rpx;
  margin-bottom: 30rpx;
}

.invitation .card-acode .acode-text {
  text-align: center;
  font-size: 26rpx;
  color: #FFF;
  line-height: 40rpx;
}

/* 弹窗 */
.modal-box {
  width: 586rpx;
  /* overflow: hidden; */
  position: fixed;
  top: 30%;
  left: 50%;
  /* transform:translate(-50%, -50%); */
  opacity: 0;
  z-index: 1200;
  background: #ffe150;
  padding: 0 24rpx;
  padding-bottom: 100rpx;
  border-radius: 16rpx;
}
.modal-box .icon-btn_qiapianguanbianniux{
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: -100rpx;
  color: #fff;
  padding: 20rpx;
  border: 2rpx solid #fff;
  border-radius: 50%;
}
.modal-box .box-header {
  padding-top: 50rpx;
  margin-bottom: 30rpx;
  font-size: 32rpx;
  line-height: 70rpx;
  text-align: center;
  color: #555;
  position: relative;
  border-radius: 20rpx;
}
.modal-box .box-header::after{
  content: '';
  display: block;
  width: 70rpx;
  height: 6rpx;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  background-color: #fff;
}
.modal-box .box-margin {
  padding:48rpx 24rpx;
  overflow: scroll;
  -webkit-overflow-scrolling: touch;
  max-height: 600rpx;
  background-color: #fff;
  border-radius: 8rpx;
}

.modal-box .box-margin .box-text {
  width: 100%;
  font-size: 30rpx;
  color: #555;
  line-height: 40rpx;
  margin-bottom: 10rpx;
}

.modal-box .box-margin .box-ps {
  font-size: 28rpx;
  color: #555;
  line-height: 40rpx;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
}

.modal-box .box-margin .box-ps .box-text {
  font-size: 28rpx;
}