/* pages/user/money/money.wxss */
page {
  background-color: #fff;
}

.invitation {
  background-size: 100% 100%;
  background-repeat: no-repeat;
  padding-bottom: 100rpx;
}

.invitation .content-top {
  width: 100%;
  height: 640rpx;
}

.invitation .content-rule {
  position: fixed;
  top: 76rpx;
  right: 0;
  height: 44rpx;
  width: 130rpx;
  border-top-left-radius: 22rpx;
  border-bottom-left-radius: 22rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: #FFF;
  font-size: 24rpx;
  line-height: 44rpx;
  text-align: center;
}

.invitation .content-title-b {
  text-align: center;
  font-size: 36rpx;
  color: #C03C05;
  font-weight: 600;
  margin-bottom: 6rpx;
}

.invitation .content-title-s {
  text-align: center;
  font-size: 22rpx;
  color: #FFEDE4;
  font-weight: 500;
  margin-top: 8rpx;
  margin-bottom: 50rpx;
}

.invitation .content-gifts {
  margin: 0 25rpx;
  width: 700rpx;
  height: 268rpx;
  box-sizing: border-box;
  padding: 72rpx 14rpx 18rpx 14rpx;
