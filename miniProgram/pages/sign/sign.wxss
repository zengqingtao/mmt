  background-position: center center;
  background-size: contain;
}
.sevenDays-progress .action-box  image{
  display: block;
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 49%;
  left: 50%;
  transform: translate(-50%,-50%);
  
}
.sevenDays-progress .progress-list {
  width: 80rpx;
  height: 70rpx;
  line-height: 60rpx;
 
  color: #FFFFFF;
  font-size: 26rpx;
  text-align: center;
  position: relative;
  z-index: 2;
}
.sevenDays-progress .progress-list .points{
  position: relative;
  z-index: 2;
}
.sevenDays-progress .progress-list .small {
  color: #FFFFFF;
  font-size: 22rpx;
  
}

.dayItem .text{
  font-size: 20rpx;
  line-height: 30rpx;
  height: 30rpx;
  margin-top: 10rpx;
  color: #AA4800;
