}
.signin-score-list {
  font-size: 22rpx;
  color: #AA4800;
}
.signin-score-list .icon-right {
  font-size: 22rpx;
  color: #AA4800;
}

.switch_wrap {
  position: absolute;
  top: 40rpx;
  right: 10rpx;
  text-align: center;
  width: 140rpx;
  height: 90rpx;
}

.switch_wrap .signin-remind-switch {
  font-size: 20rpx;
  color: #D68200;
}

.switch_wrap .switch{
  display: inline-block;
  width: 68rpx;
  height: 40rpx;
  border-radius: 20rpx;
  background-color: #FFECD0;
  position: relative;
}
.switch_wrap .switch .box{
  width: 40rpx;
  height: 40rpx;
  background: #fff;
  border-radius: 50%;
  position: absolute;
  left:0;
  top: 0;
}
.switch_wrap .checked{
  background-color: #D68200;
}
.switch_wrap .checked .box{
  right: 0;
  left: auto;
}

.signin-remind-line {
  margin: 0 24rpx;
  height: 24rpx;
  width: 2rpx;
  background-color: #FFFFFF;
}
.icon-right{
  font-size: 24rpx;
  color: #fff
}

.score-block {
  padding-left: 25rpx;
  padding-top: 30rpx;
  background-color: #FFFFFF;
  position: relative;
}
.score-block .guide{
  position: absolute;
  top: -310rpx;
  left: 0;
  z-index: 1000;
  color: #fff;
  width:100%;
}
.score-block .guide .close_btn{
  display: block;
  width: 272rpx;
  height: 84rpx;
  margin: 0 auto;
  margin-bottom: 30rpx;
}
.score-block .guide .guide_img{
  display: block;
  width: 574rpx;
  height: 208rpx;
  margin-left: 110rpx;
}
.score-block .to_share {
  position: relative;
  top: auto;
  left: auto;
  right: auto;
  bottom: auto;
  display: inline-block;
  width: auto;
  height: auto;
  padding: 0;
  background-color: transparent;
}

.score-block .score-block-image {
  width: 700rpx;
  height: 270rpx;
  border-radius: 16rpx;
  position: relative;
}

.score-block .score-block-image.two {
