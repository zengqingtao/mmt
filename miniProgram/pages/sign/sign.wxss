/* 签到按钮 */
.signin-button-block {
  position: relative;
  padding-top: 24rpx;
  text-align: center;
}
.signin-button-image{
  width: 386rpx;
  height: 126rpx;
  background-size: 100% 100%;
  background-repeat: no-repeat;
  background-color: transparent
}

.signin-text-remind {
  font-size: 22rpx;
