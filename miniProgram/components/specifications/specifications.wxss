/* components/specifications/specifications.wxss */
/* 幕布 */

.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0,0,0,0.6);
  overflow: hidden;
  z-index: 1999;
  color: #fff;
}
/*SKU弹窗*/

.drawer_attr_box {
  width: 100%;
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  left: 0;
  opacity: 0;
  z-index: 2000;
  background: #fff;
}
.drawer_attr_box.show{
  opacity: 1;
  animation: fadeInUp 0.5s;
}
.close_icon {
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  width: 60rpx;
  height: 60rpx;
}

.close_icon wx-image {
  position: absolute;
  right: 0rpx;
  top: 0rpx;
  width: 30rpx;
  height: 30rpx;
}

.drawer_attr_content {
  padding-bottom: 100rpx;
  overflow-x: hidden;
  overflow-y: scroll;
  min-height: 600rpx;
}

.drawer_attr_content .buy_now_btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  background-color: #ffe150;
  border-radius: 0;
  position: absolute;
  bottom: 0;
  right: 0;
  font-size: 34rpx;
  color: #555;
}

.text_center {
  width: 90%;
  box-sizing: border-box;
  height: 168rpx;
  padding: 40rpx;
  padding-left: 190rpx;
  margin: 0 30rpx;
  /* border-bottom: 1rpx #e4e4e4 solid; */
}

.product-SKU {
  width: 100%;
  vertical-align: top;
  display: inline-block;
  margin-left: 24rpx;
}

.product-SKU .product-price {
  font-size: 32rpx;
  font-weight: 700;
  line-height: 36rpx;
  color: #f23030;
}
.product-SKU .product-price .text{
  font-size: 30rpx;
  font-weight: 700;
  line-height: 36rpx;
  color: #f23030;
}
.product-SKU .product-price .small {
  color: #b5b5b5;
  font-size: 18rpx;
  margin-left: 10rpx;
  text-decoration: line-through;
}

.product-SKU .product-choose {
  font-size: 28rpx;
  line-height: 1;
  color: #767676;
  padding-top: 18rpx;
}

.drawer_image {
  position: absolute;
  top: -40rpx;
  left: 30rpx;
  width: 180rpx;
  height: 180rpx;
  background-color: rgb(247, 244, 244);
  border: 1rpx solid #e4e4e4;
  overflow: hidden;
}

.drawer_image image {
  width: 180rpx;
  height: 180rpx;
}

.drawer_desc {
  font-size: 28rpx;
  margin: 20rpx;
  height: 150rpx;
  width: 100%;
}

.group-name {
  font-size: 26rpx;
  box-sizing: border-box;
  color: #979797;
  text-align: left;
  line-height: 50rpx;
}

.group-name.attr_num_txt {
  width: 70%;
}

