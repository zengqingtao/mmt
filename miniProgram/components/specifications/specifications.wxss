/*每组属性的主盒子*/

.attr-margin {
  padding-top: 20rpx;
  max-height: 500rpx;
  overflow: hidden;
}

.attr_main {
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
}

.attr_main.sku-height {
  max-height: 400rpx;
  overflow: auto;
}

/*数量*/

.group-click {
  width: 30%;
  height: 50rpx;
  line-height: 50rpx;
  text-align: right;
  align-self: center;
}

.attr-amount {
  width: 90%;
  padding: 0;
  display: flex;
  padding-top: 40rpx;
  margin: 10rpx 30rpx 140rpx 30rpx;
  /* border-top: 1rpx #e4e4e4 solid; */
}

.amount-button {
  color: #555;
  background-color: #f7f7f7;
  border: none;
}

.amount-input {
  border: none;
}

/*全部属性的主盒子*/

.commodity_attr_list {
  display: inline-block;
  width: 100%;
  background: #fff;
}

.attr_box {
  width: 100%;
}

/*属性名*/

.attr_name {
  float: left;
  display: block;
  font-size: 24rpx;
  line-height: 50rpx;
  border-radius: 10rpx;
  color: #303030;
  padding: 0 20rpx;
  font-weight: 500;
  margin: 0 20rpx 20rpx 0;
  min-width: 144rpx;
  border-width: 0.5px;
  overflow: hidden;
  text-align: center;
  box-sizing: border-box;
  background-color: #e4e4e4;
  /* border: 1rpx #e4e4e4 solid; */
}

.attr_name.active {
  /* border: 1rpx #ffe150 solid; */
  color: #303030;
  background-color: #ffe150;
}

.attr_name.disable, .attr_name.active.disable {
  background-color: #eeeeee;
  color: #cccccc;
}

.font_24{
  font-size: 24rpx
}

.bt-68 {
  bottom: -68rpx !important;
}

/* 数量输入框 */

.amount-input {
  display: block;
  float: left;
  width: 70rpx;
  height: 50rpx;
  line-height: 50rpx;
  min-height: 50rpx;
  color: #767676;
  font-size: 26rpx;
  font-weight: 400;
  text-align: center;
  background-color: #fff;
  box-sizing: border-box;
}

.amount-button {
  display: block;
  background-color: #f7f7f7;
  float: left;
  box-sizing: border-box;
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  overflow: hidden;
  padding: 0;
}
.amount-button.left{
  border-top-left-radius: 4rpx;
  border-bottom-left-radius: 4rpx;
}
.amount-button.right{
  border-top-right-radius: 4rpx;
  border-bottom-right-radius: 4rpx;
}
.amount-button.left button{
  padding: 0;
  border-radius: 0;
  line-height: 1.3;
  height: 50rpx;
}
.amount-button.right button{
  padding: 0;
  border-radius: 0;
  line-height: 1.3;
  height: 50rpx;
}
.amount-icon{
  opacity: 1
}

@keyframes fadeInUp{
  from {
    opacity: 0;
    -webkit-transform: translate3d(0, 100%, 0);
    transform: translate3d(0, 100%, 0);
  }
  to {
    opacity: 1;
    -webkit-transform: none;
    transform: none;
  }
}
@keyframes fadeOutDown{

  from {
    opacity: 1;
  }
  to {
    opacity: 0;
    -webkit-transform: translate3d(0, 100%, 0);
    transform: translate3d(0, 100%, 0);
  }
}