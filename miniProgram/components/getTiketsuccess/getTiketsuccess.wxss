
@import "../../iconfont.wxss";

.invitation-curtain {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.3);
  z-index: 99998
}

.invitation-guide {
  width: 650rpx;
  height:651rpx; 
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  -webkit-transform: translate(-50%, -50%);
  z-index: 99999;
  background-size: 100% 100%;
  border-radius: 4px;
}

.invitation-guide .guide-box {
  position: relative;
}

.invitation-guide .invitation-img {
  width: 646rpx;
}

.invitation-guide .iconfont.icon-btn_qiapianguanbianniux {
  position: absolute;
  right: 24rpx;
  top: 24rpx;
  font-size: 24rpx;
  color: #aaa;
  z-index: 99;
}

.ticketContent{
  position: relative;
  height:651rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%);
  -webkit-transform: translate(-50%);
}
.ticketContent .tiket_tip{
  color: #fff;
  font-size: 20rpx;
  text-align: center;
  position: absolute;
  bottom: 6%;
  left: 50%;
  transform: translate(-50%);
  -webkit-transform: translate(-50%);

}
.tiketOut{
  margin-top: 20rpx;
  width: 56rpx;
  height: 56rpx;
  background-repeat: no-repeat;
  background-color: transparent;
  border-radius: 500rpx;
  padding: 10rpx;
  background-size: 100% 100%;
  position: absolute;
  left: 50%;
  bottom: -130rpx;
  transform: translate(-50%);
  -webkit-transform: translate(-50%);
}
.ticketContent .tikiet_title{
  padding-top: 21px;
  color: #303030;
  font-size: 52rpx;
  text-align: center;

}
.tikiet_limit{
  position: relative;
  display: flex;
 align-items: center;
 /* width: 80%; */
   left: 50%;
