/* components/loadingBottom/loadingBottom.wxss */
.loading-box{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height:80rpx;
}
.loading-box .box-one{
  border-radius: 50%;
  height:12rpx;
  width: 12rpx;
  margin: 0 10rpx;
  background-color: #303030;
  animation: box-one-anime 1s ease-in-out 1ms infinite;
  opacity: 0.8;
}
@keyframes box-one-anime{
  33%{background-color: #aaa}
  66%{background-color: #555}
  100%{background-color: #303030}
}
