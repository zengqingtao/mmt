/* components/invitationGuide/invitationGuide.wxss */
@import "../../iconfont.wxss";

.invitation-curtain {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.3);
  z-index: 99998
}

.invitation-guide {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  -webkit-transform: translate(-50%, -50%);
    z-index: 99999
}

.invitation-guide .guide-box {
  position: relative;
}

.invitation-guide .invitation-img {
  width: 646rpx;
}

.invitation-guide .iconfont.icon-btn_qiapianguanbianniux {
  position: absolute;
  right: 24rpx;
  top: 24rpx;
  font-size: 24rpx;
  color: #aaa;
}

.invitation-guide .invitation-share {
  position: absolute;
  bottom: 122rpx;
  left: 50%;
  transform: translateX(-50%);
  -webkit-transform: translateX(-50%);
  width: 480rpx;
  height: 76rpx;
  background: linear-gradient(180deg, rgba(255, 106, 88, 1) 0%, rgba(251, 51, 27, 1) 100%);
  box-shadow: 0px 2px 4px 0px rgba(176, 21, 0, 0.5);
  border-radius: 25px;
  font-size: 32rpx;
  color: #ffffff;
  padding: 0;
}
.invitation-guide .no-prompt{
  position: absolute;
  bottom: 68rpx;
  left: 50%;
  transform: translateX(-50%);
  -webkit-transform: translateX(-50%);
  display: flex;
  align-items: center;
  justify-content: center;
}

.invitation-guide .no-prompt .iconfont{
  color: #AAAAAA;
}
.invitation-guide .no-prompt .text{
  font-size: 24rpx;
  margin-left: 12rpx;
  color: #AAAAAA;
}