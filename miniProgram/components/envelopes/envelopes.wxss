/* components/envelopes/envelopes.wxss */
.curtain {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.8);
  z-index: 99998;
}
.envelopes{
  position: fixed;
  top: 55%;
  left: 50%;
  transform: translate(-50%,-55%);
  z-index: 99999;
}
.img-box{
  position: relative;
}
.img-box .img{
  width: 668rpx;
}
.img-box .msg{
  position: absolute;
  width: 520rpx;
  top: 170rpx;
  left: 50%;
  transform: translateX(-50%);
  -webkit-transform: translateX(-50%);
}
.img-box .msg .t{
  text-align: center;
  font-size: 52rpx;
  font-weight: 600;
  color: #FFCBA8
}
.img-box .price{
  position: absolute;
  width: 520rpx;
  top: 340rpx;
  left: 50%;
  transform: translateX(-50%);
  -webkit-transform: translateX(-50%);
  text-align: center;
}
.img-box .price .price-number{
  display: flex;
  align-items: flex-end;
  justify-content: center;
}
.img-box .price .price-number .p{
  font-size: 180rpx;
  line-height: 140rpx;
  color: #fff;
  font-weight:600;
  text-shadow: 2px 3px 2px #D11700;
}
.img-box .price .price-number .t{
  font-size: 44rpx;
  color: #FFCBA8;
  margin-left: 20rpx;
}
.img-box .price .pirce-min{
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #FFCBA8
}
.img-box .btn-withdraw{
  position: absolute;
  bottom: 136rpx;
  left: 50%;
  transform: translateX(-50%);
  -webkit-transform: translateX(-50%);
  width: 248rpx
}

.img-box .btn-share{
  position: absolute;
  bottom: 136rpx;
  left: 50%;
  transform: translateX(-50%);
  -webkit-transform: translateX(-50%);
  width: 248rpx;
  height: 248rpx;
  background-size: 100% 100%;
  padding: 0;
  background-color: transparent;
}
.img-box .log{
  position: absolute;
  width: 520rpx;
  text-align: center;
  bottom: 68rpx;
  left: 50%;
  transform: translateX(-50%);
  -webkit-transform: translateX(-50%);
  font-size: 32rpx;
  color: #FFCBA8
}



